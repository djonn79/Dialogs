<Window x:Class="Dialogs.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogs"
        
        WindowStyle="None"
        ShowInTaskbar="False"        
        
        mc:Ignorable="d"
        Title="MainWindow"
        MaxHeight="800"
        Height="300"  Width="600"
        SizeToContent="Height"
        >
    <StackPanel>
        <StackPanel x:Name="stackPanelButtons"  Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button Content="Да" Width="80" Height="30" />
                <Button Content="Нет" Width="80" Height="30" Margin="10,0,0,0"/>
            </StackPanel>            
            <Button Content="Океюшки.." Width="80" Height="30" />
        </StackPanel>
    </StackPanel>
</Window>
